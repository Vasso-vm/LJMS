{% block form_row %}
    {% spaceless %}
        <div class="control-group">
            {{form_label(form,null,{label_attr:{'class': 'control-label'}})}}
            <div class="controls">
                {{ form_widget(form,{attr:{'class': 'input-large'}}) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}
{% block _division_file_row %}
    <div class="control-group">
        {{form_label(form,null,{label_attr:{'class': 'control-label'}})}}
        <div class="controls">
            {{ form_widget(form,{attr:{'class': 'input-large','onchange':'return uploadFile(this.files);'}}) }}
            {{ form_errors(form) }}
            <span class="help-block">Recommended dimensions of 640Ã—480<br>Maximum file size of 4MB </span>
        </div>
    </div>
{% endblock %}
{% block row_addRole %}
    <div class="add_role">
        {{ form_widget(form.AddRole)}}
    </div>
{% endblock %}
{% block form_errors %}
    {% for error in errors %}
        <p><label for="{{ form.vars.id }}" class="help-block error">{{ error.message }}</label></p>
    {% endfor %}

{% endblock %}
