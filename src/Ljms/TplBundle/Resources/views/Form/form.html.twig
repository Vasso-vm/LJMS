{% block _schedule_date_row  %}
    <div class="control-group">
        {{form_label(form,'Date',{label_attr:{'class': 'control-label'}})}}
        <div class="controls">
            {{ form_widget(form.date.day,{attr:{'class':'input-mini pull-left'} }) }}
            {{ form_widget(form.date.month,{attr:{'class':'input-mini'} }) }}
            {{ form_widget(form.date.year,{attr:{'class':'input-mini'} }) }}
        </div>
    </div>
    <div class="control-group">
        {{form_label(form,'Time',{label_attr:{'class': 'control-label'}})}}
        <div class="controls">
            {{ form_widget(form.time.hour,{attr:{'class':'input-mini pull-left'} }) }}
            <span> : </span>
            {{ form_widget(form.time.minute,{attr:{'class':'input-mini'} }) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock %}

