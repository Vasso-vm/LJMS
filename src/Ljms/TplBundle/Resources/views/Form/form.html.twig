{% block captcha_widget %}
    {% spaceless %}
        <script type="text/javascript" src={{ form.vars.url }}></script>
        <script type="text/javascript">
                Recaptcha.create("{{ form.vars.public_key }}", 'recaptcha_div', {
                    theme: "red",
                    callback: Recaptcha.get_response()});
        </script>
        <div id="recaptcha_div"></div>
    {% endspaceless %}
{% endblock %}