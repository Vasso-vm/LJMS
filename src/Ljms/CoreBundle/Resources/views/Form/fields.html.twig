{% block form_row %}
{% spaceless %}
    <div class="control-group">
        {{form_label(form,null,{label_attr:{'class': 'control-label'}})}}
        {{ form_errors(form) }}
        <div class="controls">
        	{{ form_widget(form,{attr:{'class': 'input-large'}}) }}
        </div>        
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block row_addRole %}
	<div class="add_role">
	{{ form_widget(form.AddRole)}}
	</div>
{% endblock %}


