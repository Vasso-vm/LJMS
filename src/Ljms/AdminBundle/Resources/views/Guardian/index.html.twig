{% extends 'LjmsAdminBundle:Default:base.html.twig' %}
	{% block content%}
		<h2>Guardians</h2>
		<form action="{{path ('guardian_index')}}" method="get" class="pull-left" id="filter_form">
			<span class="filter"><strong>Filter by:</strong></span>
			<span class="filter"> Status:</span>
			<select id="filter" name="status">
				<option value="all" {% if filter.status=='all' %}selected {%endif%}>All</option>
				<option value="active"{% if filter.status=='active' %}selected {%endif%}>Active</option>
				<option value="inactive"{% if filter.status=='inactive' %}selected {%endif%}>Inactive</option>
			</select>
			<input class="btn filter" type="submit" value="filter" >
		</form>
		 <div class="pull-right">
			<a href="{{ path('guardian_add') }}" class="btn action add" id="act">Add guardian</a>
		</div>
		<form action="{{path ('guardian_group')}}" method="post" id="system_users_form">
			<div class="pull-left">
				<select id="action_select" name="action_select">
					<option value="active">Active</option>
					<option value="inactive">Inactive</option>
					<option value="delete">Delete</option>
				</select>
				<input class="btn action" type="submit" value="Action" >
			</div>
			<div class="pagination pull-right">
				<ul>
					<li class="active">
						<a href="">10</a>
					</li>
					<li class="active">
						<a href="">20</a>
					</li>
					<li class="active">
						<a href="">30</a>
					</li>
					<li class="active">
						<a href="">All</a>
					</li>		
				</ul>
			</div>
			<table class="system_users">
				<tbody>
				<tr class="header">
					<td><input type="checkbox" id="selall"></td>
					<td>NAME</td>
					<td>CONTACT</td>
					<td>EMAIL</td>
					<td>PLAYERS</td>
					<td>ACTION</td>
				</tr>
				{% for g in guardians %}
				<tr {% if g[0].is_active==0 %} class="muted content"{% else %}class="content"{% endif %} >
					<td> <input type="checkbox" class="checkbox" name="check[]" value={{g[0].id}}> </td>
					<td class="name">{{g[0].first_name}} , {{g[0].last_name}}</td>
					<td> {{g[0].home_phone}}</td>
					<td class="email">{{ g[0].email}}</td>
					<td>{% if g.num_players>0 %}
                            <a href="{{ path('player_index') }}?id={{ g[0].id }}">({{ g.num_players }})</a>
                        {% else %}
                            (0)
                        {%  endif %}
                    </td>
					<td>
						<a class="btn action add" href="{{path('player_add',{'id':g[0].id}) }}" id="act">Add player</a>
						<a href="{{path ('guardian_edit',{'id':g[0].id}) }}">
							<img src="{{ asset('bundles/ljmshome/images/edit.png') }}">
						</a>
						<a href="{{ path ('guardian_delete',{'id':g[0].id}) }}" onclick="return confirm ('Do you want to delete guardian?');">
							<img src="{{ asset('bundles/ljmshome/images/delete.png') }}">
						</a>
					</td>
				</tr>
				{%endfor%}
				</tbody>
			</table>
		</form>		
	{% endblock %}
